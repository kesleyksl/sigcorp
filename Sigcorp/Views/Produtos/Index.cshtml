@model IEnumerable<Sigcorp.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr class="bg-success text-white">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorUnitario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorUnitario)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProdutoID">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.ProdutoID">Detalhes</a> 
                <a asp-action="Delete" asp-route-id="@item.ProdutoID">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
