@model IEnumerable<Sigcorp.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-success text-white">
            <th>
                @Html.DisplayNameFor(model => model.NomeCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td> 
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClienteID">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.ClienteID">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.ClienteID">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>