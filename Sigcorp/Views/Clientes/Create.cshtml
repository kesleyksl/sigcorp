@model Sigcorp.Models.Cliente
@{
    ViewData["Title"] = "Novo Cliente";
}

<h1>@ViewData["Title"]</h1>

<h4>Cliente</h4>

<hr />

<div class="row">

    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="NomeCompleto" class="col-form-label"></label>
                <input asp-for="NomeCompleto" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="col-form-label"></label>
                <input asp-for="Cpf" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>


